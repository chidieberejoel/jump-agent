MIX_ENV=dev

SECRET_KEY_BASE="your_secret_key_base_here"

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_REDIRECT_URI=http://localhost:4000/auth/user/google/callback

# HubSpot OAuth Configuration
HUBSPOT_CLIENT_ID=your_hubspot_client_id_here
HUBSPOT_APP_ID=your_actual_app_id_here
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret_here
HUBSPOT_REDIRECT_URI=http://localhost:4000/auth/hubspot/callback

OPENAI_API_KEY=your_openai_api_key_here

# Optional: Specify the model to use (defaults to gpt-4)
# https://platform.openai.com/docs/models
OPENAI_MODEL=gpt-4.1-mini-2025-04-14

# Token Encryption Key
# Generate with: mix run -e "IO.puts(:crypto.strong_rand_bytes(32) |> Base.encode64())"
TOKEN_ENCRYPTION_KEY=your_token_encryption_key_here

# Webhook Verification Token (optional, for production)
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

WEBHOOK_BASE_URL=https://your-domain.com
WEBHOOK_SECRET=your-webhook-secret-here

